{
    "compilerOptions": {
        "target": "esnext",
        "module": "NodeNext",
        "allowJs": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "lib": [
            "esnext"
        ],
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "nodenext",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}